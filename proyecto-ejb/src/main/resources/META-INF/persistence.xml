		<class>uma.wow.proyecto.CuentaReferencia</class>
		<class>uma.wow.proyecto.DepositadaEn</class>
		<class>uma.wow.proyecto.DepositaEnPK</class>
		<class>uma.wow.proyecto.Divisa</class>
		<class>uma.wow.proyecto.Empresa</class>
		<class>uma.wow.proyecto.PersonaAutorizada</class>
		<class>uma.wow.proyecto.PooledAccount</class>
		<class>uma.wow.proyecto.Transaccion</class>
		<class>uma.wow.proyecto.Individual</class>
		<class>uma.wow.proyecto.Usuario</class>
		<class>uma.wow.proyecto.Segregada</class>
    <shared-cache-mode>NONE</shared-cache-mode>
    <properties>
    	<property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
